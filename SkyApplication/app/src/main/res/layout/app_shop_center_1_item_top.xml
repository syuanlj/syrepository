<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sky_color_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:orientation="vertical"
        android:paddingLeft="@dimen/sky_dp_size_12"
        android:paddingRight="@dimen/sky_dp_size_12"
        android:paddingBottom="@dimen/sky_dp_size_16"
        android:paddingTop="@dimen/sky_dp_size_16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二级分类"
            android:singleLine="true"
            android:textColor="@color/sky_color_black"
            android:textSize="@dimen/sky_font_size_20"
            android:gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二级分类"
            android:maxLines="2"
            android:textColor="@color/sky_color_black"
            android:textSize="@dimen/sky_font_size_15"
            android:gravity="start"/>

        <HorizontalScrollView
            android:id="@+id/recommend_product_list"
            android:layout_width="match_parent"
            android:layout_height="59dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:src="@color/driver_colorPrimary" />

                <ImageView
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:src="@color/driver_colorPrimary"/>

                <ImageView
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:src="@color/driver_colorPrimary"/>

                <ImageView
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:src="@color/driver_colorPrimary"/>

                <ImageView
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:src="@color/driver_colorPrimary"/>

                <ImageView
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:src="@color/driver_colorPrimary"/>

                <ImageView
                    android:layout_width="59dp"
                    android:layout_height="match_parent"
                    android:src="@color/driver_colorPrimary"/>

            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

</LinearLayout>