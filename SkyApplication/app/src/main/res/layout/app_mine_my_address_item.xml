<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sky_dp_size_132"
    android:background="@color/sky_color_white">

    <RelativeLayout
        android:id="@+id/app_tmp_2_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sky_dp_size_40"
        android:paddingLeft="@dimen/sky_dp_size_14"
        android:paddingRight="@dimen/sky_dp_size_14">

        <TextView
            android:id="@+id/app_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王女士"
            android:singleLine="true"
            android:maxLength="15"
            android:textSize="@dimen/sky_font_size_16"
            android:textColor="@color/sky_color_303030"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/app_mobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15077882504"
            android:singleLine="true"
            android:textSize="@dimen/sky_font_size_16"
            android:textColor="@color/sky_color_303030"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/sky_dp_size_14"
        android:paddingRight="@dimen/sky_dp_size_14"
        android:layout_below="@id/app_tmp_2_rl"
        android:layout_marginTop="@dimen/sky_dp_size_5">

        <TextView
            android:id="@+id/app_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="饿噶啦说大哥撒过撒个撒个撒个撒嘎说过dsgagdagadsgasdgasg"
            android:maxLines="2"
            android:textSize="@dimen/sky_font_size_16"
            android:textColor="@color/sky_color_303030"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <View style="@style/grey_0_5_horizontal_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sky_dp_size_42"
            android:paddingLeft="@dimen/sky_dp_size_14"
            android:paddingRight="@dimen/sky_dp_size_14">

            <CheckBox
                android:id="@+id/app_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="设为默认"
                android:textSize="@dimen/sky_dp_size_16"
                android:textColor="@color/sky_color_303030"/>

            <TextView
                android:id="@+id/app_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:drawableLeft="@mipmap/app_edit_icon"
                android:drawablePadding="@dimen/sky_dp_size_4"
                android:textSize="@dimen/sky_font_size_16"
                android:textColor="@color/sky_color_303030"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/app_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:drawableLeft="@mipmap/app_del_icon"
                android:layout_toLeftOf="@id/app_del"
                android:layout_marginRight="@dimen/sky_dp_size_12"
                android:drawablePadding="@dimen/sky_dp_size_4"
                android:textSize="@dimen/sky_font_size_16"
                android:textColor="@color/sky_color_303030"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>