<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sky_color_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/sky_dp_size_56"
            android:text="支付方式"
            android:gravity="center"
            android:textSize="@dimen/sky_font_size_20"
            android:textColor="@color/sky_color_white"
            android:background="@color/main_colorPrimary"/>

        <View style="@style/grey_0_5_horizontal_line"/>

        <RelativeLayout
            android:id="@+id/alipay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sky_dp_size_56"
            android:paddingLeft="@dimen/sky_dp_size_17"
            android:paddingRight="@dimen/sky_dp_size_17">

            <ImageView
                android:id="@+id/app_alipay_icon"
                android:layout_width="@dimen/sky_dp_size_30"
                android:layout_height="@dimen/sky_dp_size_30"
                android:src="@mipmap/app_alipay_icon"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/sky_color_333333"
                android:text="支付宝支付"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_toRightOf="@id/app_alipay_icon"
                android:layout_marginLeft="@dimen/sky_dp_size_10"/>

            <RadioButton
                android:id="@+id/app_alipay"
                android:layout_width="@dimen/sky_dp_size_20"
                android:layout_height="@dimen/sky_dp_size_20"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/app_pay_shape_selector"
                android:button="@null"
                android:clickable="false"/>

        </RelativeLayout>

        <View style="@style/grey_0_5_horizontal_line"
            android:layout_marginLeft="@dimen/sky_dp_size_17"
            android:layout_marginRight="@dimen/sky_dp_size_17"/>

        <RelativeLayout
            android:id="@+id/weixin_pay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sky_dp_size_56"
            android:paddingLeft="@dimen/sky_dp_size_17"
            android:paddingRight="@dimen/sky_dp_size_17">

            <ImageView
                android:id="@+id/app_weixin_icon"
                android:layout_width="@dimen/sky_dp_size_30"
                android:layout_height="@dimen/sky_dp_size_30"
                android:src="@mipmap/app_weixin_pay_icon"
                android:layout_centerVertical="true"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/sky_color_333333"
                android:text="微信支付"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_toRightOf="@id/app_weixin_icon"
                android:layout_marginLeft="@dimen/sky_dp_size_10"/>

            <RadioButton
                android:id="@+id/app_weixin_pay"
                android:layout_width="@dimen/sky_dp_size_20"
                android:layout_height="@dimen/sky_dp_size_20"
                android:layout_alignParentRight="true"
                android:background="@drawable/app_pay_shape_selector"
                android:layout_centerVertical="true"
                android:button="@null"
                android:clickable="false"/>
        </RelativeLayout>

        <View style="@style/grey_0_5_horizontal_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/app_cancel_btn"
                android:layout_width="@dimen/sky_dp_size_0"
                android:layout_weight="1"
                android:layout_height="@dimen/sky_dp_size_56"
                android:text="取 消"
                android:gravity="center"
                android:textColor="@color/main_colorPrimary"
                android:textSize="@dimen/sky_font_size_18"
                style="?android:attr/borderlessButtonStyle"
                android:background="@color/sky_color_white"
                android:textStyle="bold"/>

            <View style="@style/grey_0_5_vertical_line"/>

            <Button
                android:id="@+id/app_confirm_btn"
                android:layout_width="@dimen/sky_dp_size_0"
                android:layout_weight="1"
                android:layout_height="@dimen/sky_dp_size_56"
                android:text="确 认"
                android:gravity="center"
                android:textColor="@color/sky_color_white"
                android:textSize="@dimen/sky_font_size_18"
                style="?android:attr/borderlessButtonStyle"
                android:background="@color/main_colorPrimary"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>