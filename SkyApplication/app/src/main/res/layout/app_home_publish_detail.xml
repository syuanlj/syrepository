<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/sky_color_white">

    <include layout="@layout/app_normal_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sky_dp_size_50"
            android:paddingLeft="@dimen/sky_dp_size_22"
            android:orientation="horizontal">

            <com.sky.app.library.component.CircleImageView
                android:id="@+id/photo"
                android:layout_width="@dimen/sky_dp_size_36"
                android:layout_height="@dimen/sky_dp_size_36"
                android:src="@mipmap/app_person_icon"
                app:civ_border_width="@dimen/sky_dp_size_0"
                app:civ_border_color="@color/sky_color_transparent_white"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="大大"
                android:textColor="@color/sky_color_333333"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sky_font_size_15"
                android:layout_marginLeft="@dimen/sky_dp_size_14"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/sky_dp_size_12"
            android:background="@color/sky_color_f2f2f2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sky_dp_size_112"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sky_dp_size_0"
                android:layout_weight="1"
                android:singleLine="true"
                android:paddingLeft="@dimen/sky_dp_size_22"
                android:paddingRight="@dimen/sky_dp_size_22"
                android:textColor="@color/sky_color_333333"
                android:textSize="@dimen/sky_font_size_18"
                android:gravity="left|center_vertical"/>

            <View style="@style/grey_0_5_horizontal_line"
                android:layout_marginLeft="@dimen/sky_dp_size_13"/>

            <TextView
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sky_dp_size_0"
                android:layout_weight="1"
                android:singleLine="true"
                android:paddingLeft="@dimen/sky_dp_size_22"
                android:paddingRight="@dimen/sky_dp_size_22"
                android:textColor="@color/sky_color_333333"
                android:textSize="@dimen/sky_font_size_18"
                android:gravity="left|center_vertical"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/sky_dp_size_12"
            android:background="@color/sky_color_f2f2f2"/>

        <TextView
            android:id="@+id/app_content"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sky_dp_size_0"
            android:layout_weight="1"
            android:gravity="start"
            android:selectAllOnFocus="true"
            android:textColor="@color/sky_color_333333"
            android:padding="@dimen/sky_dp_size_22"
            android:textSize="@dimen/sky_font_size_18"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View style="@style/grey_0_5_horizontal_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sky_dp_size_56"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/collect"
                    android:layout_width="@dimen/sky_dp_size_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/sky_color_black"
                    android:text="收藏信息"
                    android:gravity="center"
                    android:textSize="@dimen/sky_dp_size_20"
                    android:background="@color/sky_color_white"/>

                <TextView
                    android:id="@+id/call_phone"
                    android:layout_width="@dimen/sky_dp_size_0"
                    android:layout_weight="1"
                    android:layout_height="@dimen/sky_dp_size_56"
                    android:textColor="@color/sky_color_white"
                    android:text="电话咨询"
                    android:gravity="center"
                    android:textSize="@dimen/sky_dp_size_20"
                    android:background="@color/main_colorPrimary"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>