<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"

        >

        <LinearLayout
            android:id="@+id/one_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pic_1"
                android:layout_width="63dp"
                android:layout_height="62dp"
                tools:src="@mipmap/img_1" />

            <TextView
                android:id="@+id/category_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:text="家具" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/two_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pic_2"
                android:layout_width="62dp"
                android:layout_height="62dp"
                tools:src="@mipmap/img_2" />

            <TextView
                android:id="@+id/category_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:text="家具" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/three_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"

            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pic_3"
                android:layout_width="62dp"
                android:layout_height="62dp"
                tools:src="@mipmap/img_3" />

            <TextView
                android:id="@+id/category_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:text="家具" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/four_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pic_4"
                android:layout_width="62dp"
                android:layout_height="62dp"
                tools:src="@mipmap/img_4" />

            <TextView
                android:id="@+id/category_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                tools:text="家具" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/back_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/back"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:src="@mipmap/back" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>

