<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="#33000000"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:background="#ffffff"
                  android:layout_marginTop="150dp"
                  android:layout_height="wrap_content">


<!--1-->
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingLeft="120dp"
                      android:orientation="vertical">
                <TextView android:layout_width="wrap_content"
                          android:text="¥1400"
                          android:id="@+id/product_size_price"
                          android:textColor="#d50d0d"
                          android:textSize="19sp"
                          android:layout_height="wrap_content"/>
            <TextView android:layout_width="wrap_content"
                      android:text="请选择分类"
                      android:layout_marginTop="10dp"
                      android:textSize="16sp"
                      android:textColor="#666666"
                      android:layout_height="wrap_content"/>

        </LinearLayout>


        <!--2-->
        <LinearLayout android:layout_width="match_parent"
                      android:paddingLeft="20dp"
                      android:paddingTop="10dp"
                      android:paddingBottom="10dp"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content"
                      android:text="颜色分类"
                      android:textSize="16sp"
                      android:textColor="#666666"
                      android:layout_height="wrap_content"/>


        </LinearLayout>

        <!--3-->
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">
        <ListView android:layout_width="match_parent"
                  android:id="@+id/product_size_listview"
                  android:layout_height="wrap_content"/>

        </LinearLayout>

        <!--4-->
        <LinearLayout android:layout_width="match_parent"
                      android:paddingLeft="20dp"
                      android:paddingRight="20dp"
                      android:paddingTop="10dp"
                      android:paddingBottom="10dp"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      >
            <TextView android:layout_width="wrap_content"
                      android:text="购买数量"
                      android:textSize="16sp"
                      android:textColor="#666666"
                      android:layout_height="wrap_content"/>

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:gravity="right"
                          android:layout_marginRight="20dp"
            android:orientation="horizontal"
            >

                <ImageView android:layout_width="18dp"
                           android:src="@mipmap/min"
                           android:id="@+id/product_size_min"
                           android:layout_height="18dp" />

                <TextView android:layout_width="wrap_content"
                          android:text="1"
                          android:textSize="16sp"
                          android:id="@+id/product_size_number"
                          android:layout_marginLeft="10dp"
                          android:textColor="#666666"
                          android:layout_height="wrap_content"/>

                <ImageView android:layout_width="18dp"
                           android:src="@mipmap/plus"
                           android:layout_marginLeft="10dp"
                           android:layout_height="18dp" android:id="@+id/product_size_plus"/>


            </LinearLayout>

        </LinearLayout>

        <!--5-->
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1">
            <LinearLayout
                android:fillViewport="true"
                android:orientation="horizontal"
                android:layout_gravity="bottom"

                android:layout_width="match_parent"
                android:layout_height="60dp"
            >




                <TextView android:layout_width="0dp"
                          android:id="@+id/product_size_join_car"
                          android:layout_weight="1"
                          android:layout_height="match_parent"
                          android:text="加入购物车"
                          android:gravity="center"
                          android:textSize="18sp"
                          android:textColor="@android:color/white"
                          android:background="#57bff0"
                />
                <TextView android:layout_width="0dp"
                          android:layout_weight="1"
                          android:layout_height="match_parent"
                          android:text="立即购买"
                          android:textSize="18sp"
                          android:textColor="@android:color/white"
                          android:gravity="center"
                          android:background="#1d77f0"
                          android:id="@+id/product_size_buynow"

                />



            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView android:layout_width="90dp"
               android:layout_marginTop="110dp"
               android:layout_marginLeft="20dp"
               android:id="@+id/product_size_pic"
               android:src="@mipmap/ic_launcher"
               android:layout_height="90dp"/>
</FrameLayout>