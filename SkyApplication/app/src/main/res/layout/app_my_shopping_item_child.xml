<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sky_dp_size_112"
        android:background="@color/sky_color_fafafa">

        <CheckBox
            android:id="@+id/app_select_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sky_dp_size_17"/>

        <ImageView
            android:id="@+id/app_img"
            android:layout_width="@dimen/sky_dp_size_89"
            android:layout_height="@dimen/sky_dp_size_89"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:layout_toRightOf="@id/app_select_product"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/sky_dp_size_12"
            android:layout_marginTop="@dimen/sky_dp_size_12"
            android:layout_marginBottom="@dimen/sky_dp_size_12"/>

        <RelativeLayout
            android:id="@+id/app_finish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/app_img"
            android:paddingLeft="@dimen/sky_dp_size_8"
            android:paddingRight="@dimen/sky_dp_size_17"
            android:paddingTop="@dimen/sky_dp_size_12"
            android:paddingBottom="@dimen/sky_dp_size_12"
            android:visibility="visible">

            <TextView
                android:id="@+id/app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="的撒嘎说的嘎说过搭嘎的嘎多个撒嘎过的嘎说"
                android:maxLines="2"
                android:textColor="@color/sky_color_black"
                android:textSize="@dimen/sky_font_size_16"
                android:layout_alignParentTop="true" />

            <TextView
                android:id="@+id/app_attr_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sky_font_size_15"
                android:textColor="@color/sky_color_4d4d4d"
                android:text="选择分类：搭嘎的嘎说大哥"
                android:singleLine="true"
                android:layout_marginTop="@dimen/sky_dp_size_8"
                android:layout_below="@id/app_title"/>

            <TextView
                android:id="@+id/app_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sky_font_size_16"
                android:textColor="@color/sky_color_d50d0d"
                android:text="¥214151"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/app_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sky_font_size_15"
                android:textColor="@color/sky_color_333333"
                android:text="x1"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/app_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/app_img"
            android:paddingLeft="@dimen/sky_dp_size_8"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/sky_dp_size_21">

                <TextView
                    android:id="@+id/app_del"
                    android:layout_width="@dimen/sky_dp_size_34"
                    android:layout_height="@dimen/sky_dp_size_34"
                    android:background="@color/sky_color_f8f8f8"
                    android:text="-"
                    android:gravity="center"
                    android:textColor="@color/sky_color_666666"
                    android:textSize="@dimen/sky_font_size_20"/>

                <TextView
                    android:id="@+id/app_num_edit"
                    android:layout_width="@dimen/sky_dp_size_67"
                    android:layout_height="@dimen/sky_dp_size_34"
                    android:background="@color/sky_color_f2f2f2"
                    android:text="1"
                    android:gravity="center"
                    android:textColor="@color/sky_color_666666"
                    android:textSize="@dimen/sky_font_size_20"/>

                <TextView
                    android:id="@+id/app_add"
                    android:layout_width="@dimen/sky_dp_size_34"
                    android:layout_height="@dimen/sky_dp_size_34"
                    android:background="@color/sky_color_f8f8f8"
                    android:text="+"
                    android:gravity="center"
                    android:textColor="@color/sky_color_666666"
                    android:textSize="@dimen/sky_font_size_20"/>

            </LinearLayout>

            <TextView
                android:id="@+id/app_attr_name_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sky_font_size_15"
                android:textColor="@color/sky_color_4d4d4d"
                android:text="选择分类：搭嘎的嘎说大哥"
                android:singleLine="true"
                android:ems="9"
                android:ellipsize="end"
                android:layout_marginBottom="@dimen/sky_dp_size_17"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/app_delete"
                android:layout_width="@dimen/sky_dp_size_50"
                android:layout_height="match_parent"
                android:textColor="@color/sky_color_white"
                android:text="删除"
                android:gravity="center"
                android:textSize="@dimen/sky_font_size_18"
                android:background="@color/sky_color_47c261"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/sky_dp_size_8"
        android:background="@color/sky_color_white"/>
</LinearLayout>
