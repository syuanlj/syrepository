<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sky_color_white"
    android:orientation="vertical">

    <!--搜索栏-->
    <include layout="@layout/app_normal_header" />

    <!--<RelativeLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="@dimen/sky_dp_size_112"-->
    <!--android:background="#80000000">-->

    <!--<ImageView-->
    <!--android:id="@+id/shop_background"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:scaleType="centerCrop"-->
    <!--android:src="@mipmap/app_default_icon_1" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shop_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.3"
            android:scaleType="centerCrop"
            android:src="@mipmap/app_default_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.7"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名 ："
                    android:textColor="@color/aliwx_black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sky_dp_size_7"
                    android:text="王多多"
                    android:textColor="@color/aliwx_black"
                    android:textSize="@dimen/sky_font_size_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主营业务 ："
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/app_main_sell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sky_dp_size_7"
                    android:textSize="@dimen/sky_font_size_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设计理念 ："
                    android:textSize="16dp" />

                <TextView
                    android:maxLines="1"
                    android:id="@+id/app_design_idea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sky_dp_size_7"
                    android:textSize="@dimen/sky_font_size_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="学历专业 ："
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/app_prof"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sky_dp_size_7"
                    android:textSize="@dimen/sky_font_size_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="奖项荣誉 ："
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/app_award"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sky_dp_size_7"
                    android:textSize="@dimen/sky_font_size_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="代表作品 ："
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/app_work"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/sky_dp_size_7"
                    android:textSize="@dimen/sky_font_size_16" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/sky_dp_size_12"
        android:background="@color/sky_color_f2f2f2" />



    <!--</RelativeLayout>-->

    <!-- 下面 -->
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/app_swipe"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sky_dp_size_0"
        android:layout_weight="1">

        <com.sky.app.ui.custom.MyNestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/sky_dp_size_0"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/sky_dp_size_17"
                    android:paddingRight="@dimen/sky_dp_size_17" >

                    <ImageView
                        android:gravity="center|center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/app_home_anli" />

                    <com.sky.app.library.component.recycler.recyclerview.LuRecyclerView
                        android:id="@+id/app_case_list_rv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/sky_dp_size_20"
                    android:paddingLeft="@dimen/sky_dp_size_16"
                    android:paddingRight="@dimen/sky_dp_size_16"
                    android:paddingTop="@dimen/sky_dp_size_8">

                    <ImageView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:src="@mipmap/app_home_pinglun" />
                    <!--<TextView-->
                    <!--android:id="@+id/textView5"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="@dimen/sky_dp_size_2"-->
                    <!--android:text="累计评价"-->
                    <!--android:textColor="@color/sky_color_black"-->
                    <!--android:textSize="@dimen/sky_dp_size_15" />-->

                    <LinearLayout
                        android:id="@+id/app_comment_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/app_comment_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/sky_dp_size_12"
                            android:ellipsize="end"
                            android:gravity="start"
                            android:maxLines="3"
                            android:paddingBottom="@dimen/sky_dp_size_3"
                            android:paddingTop="@dimen/sky_dp_size_3"
                            android:textColor="@color/sky_color_808080"
                            android:textSize="@dimen/sky_dp_size_15" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/sky_dp_size_14">

                            <com.sky.app.library.component.CircleImageView
                                android:id="@+id/app_user_photo_icon"
                                android:layout_width="@dimen/sky_dp_size_22"
                                android:layout_height="@dimen/sky_dp_size_22"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/app_person_icon"
                                app:civ_border_color="@color/sky_color_transparent_white"
                                app:civ_border_width="@dimen/sky_dp_size_0" />

                            <TextView
                                android:id="@+id/app_user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/sky_dp_size_6"
                                android:layout_toRightOf="@id/app_user_photo_icon"
                                android:gravity="center"
                                android:textColor="@color/sky_color_black"
                                android:textSize="@dimen/sky_dp_size_14" />


                            <TextView
                                android:id="@+id/app_comment_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:gravity="center"
                                android:textColor="@color/sky_color_a9a9a9"
                                android:textSize="@dimen/sky_dp_size_13" />
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/sky_dp_size_12"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="质量："
                                android:textColor="@color/sky_color_808080"
                                android:textSize="@dimen/sky_font_size_10" />

                            <com.sky.app.library.component.RatingBar
                                android:id="@+id/quality_rating_bar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                app:clickable="false"
                                app:halfstart="false"
                                app:starCount="5"
                                app:starEmpty="@mipmap/app_collect_grey_icon"
                                app:starFill="@mipmap/app_center_org_star_icon"
                                app:starImageHeight="@dimen/sky_dp_size_13"
                                app:starImagePadding="@dimen/sky_dp_size_3"
                                app:starImageWidth="@dimen/sky_dp_size_13" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/sky_dp_size_14"
                                android:text="服务："
                                android:textColor="@color/sky_color_808080"
                                android:textSize="@dimen/sky_font_size_10" />

                            <com.sky.app.library.component.RatingBar
                                android:id="@+id/service_rating_bar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                app:clickable="false"
                                app:halfstart="false"
                                app:starCount="5"
                                app:starEmpty="@mipmap/app_collect_grey_icon"
                                app:starFill="@mipmap/app_center_org_star_icon"
                                app:starImageHeight="@dimen/sky_dp_size_13"
                                app:starImagePadding="@dimen/sky_dp_size_3"
                                app:starImageWidth="@dimen/sky_dp_size_13" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/sky_dp_size_14"
                                android:text="速度："
                                android:textColor="@color/sky_color_808080"
                                android:textSize="@dimen/sky_font_size_10" />

                            <com.sky.app.library.component.RatingBar
                                android:id="@+id/speed_rating_bar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                app:clickable="false"
                                app:halfstart="false"
                                app:starCount="5"
                                app:starEmpty="@mipmap/app_collect_grey_icon"
                                app:starFill="@mipmap/app_center_org_star_icon"
                                app:starImageHeight="@dimen/sky_dp_size_13"
                                app:starImagePadding="@dimen/sky_dp_size_3"
                                app:starImageWidth="@dimen/sky_dp_size_13" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/app_skip_all_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/sky_dp_size_18"
                        android:background="@drawable/textview"
                        android:paddingBottom="@dimen/sky_dp_size_2"
                        android:paddingLeft="@dimen/sky_dp_size_8"
                        android:paddingRight="@dimen/sky_dp_size_8"
                        android:paddingTop="@dimen/sky_dp_size_2"
                        android:text="查看全部评价"
                        android:textColor="@color/main_colorPrimary"
                        android:textSize="@dimen/sky_font_size_15" />

                </LinearLayout>


            </LinearLayout>
        </com.sky.app.ui.custom.MyNestedScrollView>

    </android.support.v4.widget.SwipeRefreshLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View style="@style/grey_0_5_horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sky_dp_size_56"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/app_collect"
                android:layout_width="@dimen/sky_dp_size_0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawablePadding="@dimen/sky_dp_size_4"
                android:drawableTop="@mipmap/app_shop_collect_icon"
                android:gravity="center"
                android:text="收藏"
                android:textColor="@color/sky_color_333333"
                android:textSize="@dimen/sky_font_size_15" />

            <TextView
                android:id="@+id/app_call_phone"
                android:layout_width="@dimen/sky_dp_size_278"
                android:layout_height="match_parent"
                android:background="@color/main_colorPrimary"
                android:gravity="center"
                android:text="立即预约"
                android:textColor="@color/sky_color_white"
                android:textSize="@dimen/sky_font_size_18" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>