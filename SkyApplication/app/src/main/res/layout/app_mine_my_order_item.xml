<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sky_dp_size_278"
    android:orientation="vertical"
    android:background="@color/sky_color_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sky_dp_size_0"
        android:orientation="vertical"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sky_dp_size_32"
            android:paddingLeft="@dimen/sky_dp_size_16"
            android:paddingRight="@dimen/sky_dp_size_16">

            <TextView
                android:id="@+id/app_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号：123456789012345678"
                android:textSize="@dimen/sky_font_size_13"
                android:textColor="@color/sky_color_4d4d4d"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/app_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-09-09 12:22:33"
                android:textSize="@dimen/sky_font_size_13"
                android:textColor="@color/sky_color_4d4d4d"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sky_dp_size_22"
            android:paddingLeft="@dimen/sky_dp_size_16"
            android:paddingRight="@dimen/sky_dp_size_16">

            <TextView
                android:id="@+id/app_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搭嘎"
                android:textSize="@dimen/sky_font_size_14"
                android:textColor="@color/sky_color_black"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/app_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="等待支付"
                android:textSize="@dimen/sky_font_size_14"
                android:textColor="@color/sky_color_59c66f"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sky_dp_size_112"
            android:layout_marginTop="@dimen/sky_dp_size_8"
            android:background="@color/sky_color_f7f7f7"
            android:paddingLeft="@dimen/sky_dp_size_16"
            android:paddingRight="@dimen/sky_dp_size_16"
            android:paddingTop="@dimen/sky_dp_size_12"
            android:paddingBottom="@dimen/sky_dp_size_12">

            <ImageView
                android:id="@+id/app_img"
                android:layout_width="@dimen/sky_dp_size_90"
                android:layout_height="@dimen/sky_dp_size_90"
                android:src="@color/main_colorPrimary"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="的撒嘎说的嘎说过搭嘎的嘎多个撒嘎过的嘎说"
                android:maxLines="2"
                android:textColor="@color/sky_color_black"
                android:textSize="@dimen/sky_font_size_14"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/sky_dp_size_8"
                android:layout_toRightOf="@id/app_img"/>

            <TextView
                android:id="@+id/app_attr_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sky_font_size_14"
                android:textColor="@color/sky_color_4d4d4d"
                android:text="选择分类：搭嘎的嘎说大哥"
                android:singleLine="true"
                android:layout_marginLeft="@dimen/sky_dp_size_6"
                android:layout_marginTop="@dimen/sky_dp_size_8"
                android:layout_below="@id/app_title"
                android:layout_toRightOf="@id/app_img"/>

            <TextView
                android:id="@+id/app_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sky_font_size_14"
                android:textColor="@color/sky_color_333333"
                android:text="¥214151"
                android:layout_toRightOf="@id/app_img"
                android:layout_marginLeft="@dimen/sky_dp_size_8"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:id="@+id/app_no_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sky_font_size_12"
                android:textColor="@color/sky_color_333333"
                android:text="¥214151"
                android:layout_toRightOf="@id/app_price"
                android:layout_marginLeft="@dimen/sky_dp_size_2"
                android:layout_alignParentBottom="true" />

            <TextView
                android:id="@+id/app_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sky_font_size_14"
                android:textColor="@color/sky_color_333333"
                android:text="x1"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/app_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sky_dp_size_0"
            android:layout_weight="1"
            android:text="反对释放河东狮吼的释放河东狮吼的是否合法的煽风点火说的话说"
            android:maxLines="2"
            android:gravity="center_vertical"
            android:textColor="@color/sky_color_0d0d0d"
            android:textSize="@dimen/sky_font_size_14"
            android:paddingLeft="@dimen/sky_dp_size_16"
            android:paddingRight="@dimen/sky_dp_size_16"/>

    </LinearLayout>

    <View style="@style/grey_0_5_horizontal_line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sky_dp_size_47">

        <Button
            android:id="@+id/confirm"
            android:layout_width="@dimen/sky_dp_size_62"
            android:layout_height="@dimen/sky_dp_size_25"
            android:background="@drawable/app_order_selected_shape_selector"
            android:text="确认收货"
            android:textColor="@color/sky_color_white"
            android:textSize="@dimen/sky_font_size_12"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/sky_dp_size_8"
            style="?android:attr/borderlessButtonStyle"/>

        <Button
            android:id="@+id/cancel"
            android:layout_width="@dimen/sky_dp_size_62"
            android:layout_height="@dimen/sky_dp_size_25"
            android:background="@drawable/app_cancel_order_shape_selector"
            android:text="取消订单"
            android:textColor="@color/sky_color_black"
            android:textSize="@dimen/sky_font_size_12"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/sky_dp_size_12"
            android:layout_toLeftOf="@id/confirm"
            style="?android:attr/borderlessButtonStyle"/>

    </RelativeLayout>
</LinearLayout>