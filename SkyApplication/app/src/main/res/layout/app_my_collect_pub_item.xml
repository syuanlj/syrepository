<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="@dimen/sky_dp_size_125"
    android:layout_width="match_parent"
    android:background="@color/sky_color_white"
    android:paddingLeft="@dimen/sky_dp_size_22"
    android:paddingRight="@dimen/sky_dp_size_22"
    android:paddingTop="@dimen/sky_dp_size_14"
    android:paddingBottom="@dimen/sky_dp_size_14">

    <RelativeLayout
        android:id="@+id/app_tmp_1_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/app_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标题标题标题标题"
            android:singleLine="true"
            android:maxEms="10"
            android:textSize="@dimen/sky_font_size_16"
            android:textColor="@color/sky_color_333333"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/app_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布于2016-11-09"
            android:singleLine="true"
            android:textSize="@dimen/sky_font_size_10"
            android:textColor="@color/sky_color_999999"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <TextView
        android:id="@+id/app_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/sky_dp_size_45"
        android:textSize="@dimen/sky_font_size_13"
        android:textColor="@color/sky_color_666666"
        android:layout_below="@id/app_tmp_1_rl"
        android:layout_marginTop="@dimen/sky_dp_size_12"
        android:text=""/>

    <TextView
        android:id="@+id/del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textSize="@dimen/sky_font_size_16"
        android:textColor="@color/sky_color_f3cc8d"
        android:text="删除"/>

</RelativeLayout>