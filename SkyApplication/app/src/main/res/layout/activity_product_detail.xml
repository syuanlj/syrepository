<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">

            <ScrollView android:layout_width="match_parent"
                android:id="@+id/scrollview"
                android:layout_height="match_parent"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.sky.app.library.component.banner.LoopViewPagerLayout
                        android:id="@+id/detail_banner"
                        android:layout_width="match_parent"
                        android:layout_height="333dp"
                        android:background="@color/sky_color_white"/>

                    <TextView android:layout_width="wrap_content"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:id="@+id/product_detail_title"
                        android:layout_height="@dimen/sky_dp_size_45"
                        android:text="莫木头沙发简约时尚,家具风格,莫木头沙发简约时尚,家具风格"
                        android:gravity="start|center_vertical"
                        android:singleLine="true"
                        android:textSize="18sp"
                        android:textColor="#000000" />

                    <LinearLayout
                        android:paddingLeft="@dimen/sky_dp_size_17"
                        android:paddingRight="@dimen/sky_dp_size_17"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView android:layout_width="wrap_content"
                            android:text="¥6666777"
                            android:id="@+id/product_detail_newprice"
                            android:maxLength="10"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textSize="18sp"
                            android:textColor="#da4932"
                            android:layout_height="wrap_content"/>

                        <TextView android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:id="@+id/product_detail_orignprice"
                            android:text="原价：1000"
                            android:paddingLeft="@dimen/sky_dp_size_5"
                            android:textSize="@dimen/sky_font_size_13"
                            android:gravity="left|center_vertical"
                            android:textColor="#b8b8b8" android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/app_store_activity"
                        android:layout_width="match_parent"
                        android:paddingLeft="@dimen/sky_dp_size_17"
                        android:paddingRight="@dimen/sky_dp_size_17"
                        android:text="本店活动："
                        android:gravity="start|center_vertical"
                        android:singleLine="true"
                        android:textSize="15sp"
                        android:textColor="#828282"
                        android:layout_height="@dimen/sky_dp_size_36"/>

                    <View style="@style/grey_0_5_horizontal_line"/>

                    <LinearLayout
                        android:paddingLeft="@dimen/sky_dp_size_17"
                        android:paddingRight="@dimen/sky_dp_size_17"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sky_dp_size_35">

                        <LinearLayout android:layout_width="@dimen/sky_dp_size_0"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView android:layout_width="wrap_content"
                                android:text="月销量"
                                android:textSize="@dimen/sky_font_size_15"
                                android:textColor="@color/sky_color_666666"
                                android:layout_height="wrap_content" />

                            <TextView android:id="@+id/product_detail_xiaoliang"
                                android:layout_width="wrap_content"
                                android:text="50000"
                                android:maxLength="5"
                                android:ellipsize="end"
                                android:textSize="@dimen/sky_font_size_15"
                                android:layout_marginLeft="@dimen/sky_dp_size_5"
                                android:textColor="#df6b5c"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout android:layout_width="@dimen/sky_dp_size_0"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView android:layout_width="wrap_content"
                                android:text="累计评价"
                                android:textSize="@dimen/sky_font_size_15"
                                android:textColor="@color/sky_color_666666"
                                android:layout_height="wrap_content" />

                            <TextView  android:layout_width="wrap_content"
                                android:text="50000"
                                android:maxLength="5"
                                android:textSize="@dimen/sky_font_size_15"
                                android:layout_marginLeft="@dimen/sky_dp_size_5"
                                android:textColor="#df6b5c"
                                android:id="@+id/product_detail_commentnumber"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>

                    <View android:layout_width="match_parent"
                        android:layout_height="@dimen/sky_dp_size_12"
                        android:background="@color/sky_color_f2f2f2" />

                    <RelativeLayout
                        android:id="@+id/product_detail_choosesize"
                        android:paddingLeft="@dimen/sky_dp_size_17"
                        android:paddingRight="@dimen/sky_dp_size_17"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sky_dp_size_45">

                        <TextView
                            android:text="选择分类，尺码"
                            android:textSize="15sp"
                            android:textColor="#333333"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"/>

                        <ImageView android:layout_width="15dp"
                            android:src="@mipmap/app_right_arrow_icon"
                            android:layout_height="15dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                    <View android:layout_width="match_parent"
                        android:layout_height="@dimen/sky_dp_size_12"
                        android:background="@color/sky_color_f2f2f2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/sky_dp_size_17"
                        android:paddingRight="@dimen/sky_dp_size_17"
                        android:paddingTop="@dimen/sky_dp_size_12"
                        android:paddingBottom="@dimen/sky_dp_size_20">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="累计评价"
                            android:textSize="@dimen/sky_dp_size_15"
                            android:textColor="@color/sky_color_black"
                            android:layout_marginLeft="@dimen/sky_dp_size_2"/>

                        <LinearLayout
                            android:id="@+id/app_comment_ll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/sky_dp_size_14">

                                <com.sky.app.library.component.CircleImageView
                                    android:id="@+id/app_user_photo_icon"
                                    android:layout_width="@dimen/sky_dp_size_22"
                                    android:layout_height="@dimen/sky_dp_size_22"
                                    android:src="@mipmap/app_person_icon"
                                    app:civ_border_width="@dimen/sky_dp_size_0"
                                    app:civ_border_color="@color/sky_color_transparent_white"
                                    android:layout_centerVertical="true"/>

                                <TextView
                                    android:id="@+id/app_user_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sky_dp_size_14"
                                    android:text="的撒了"
                                    android:textColor="@color/sky_color_black"
                                    android:gravity="center"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/sky_dp_size_6"
                                    android:layout_toRightOf="@id/app_user_photo_icon"/>


                                <TextView
                                    android:id="@+id/app_comment_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sky_dp_size_13"
                                    android:text="2017-12-08 12:34:34"
                                    android:textColor="@color/sky_color_a9a9a9"
                                    android:gravity="center"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"/>
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/app_comment_txt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sky_dp_size_15"
                                android:textColor="@color/sky_color_808080"
                                android:gravity="start"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/sky_dp_size_12"
                                android:maxLines="3"
                                android:ellipsize="end"
                                android:paddingTop="@dimen/sky_dp_size_3"
                                android:paddingBottom="@dimen/sky_dp_size_3"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="@dimen/sky_dp_size_12">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="质量："
                                    android:textSize="@dimen/sky_font_size_10"
                                    android:textColor="@color/sky_color_808080"/>

                                <com.sky.app.library.component.RatingBar
                                    android:id="@+id/quality_rating_bar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    app:clickable="false"
                                    app:halfstart="false"
                                    app:starCount="5"
                                    app:starEmpty="@mipmap/app_collect_grey_icon"
                                    app:starFill="@mipmap/app_center_org_star_icon"
                                    app:starImageHeight="@dimen/sky_dp_size_13"
                                    app:starImagePadding="@dimen/sky_dp_size_3"
                                    app:starImageWidth="@dimen/sky_dp_size_13" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="服务："
                                    android:textSize="@dimen/sky_font_size_10"
                                    android:textColor="@color/sky_color_808080"
                                    android:layout_marginLeft="@dimen/sky_dp_size_14"/>

                                <com.sky.app.library.component.RatingBar
                                    android:id="@+id/service_rating_bar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    app:clickable="false"
                                    app:halfstart="false"
                                    app:starCount="5"
                                    app:starEmpty="@mipmap/app_collect_grey_icon"
                                    app:starFill="@mipmap/app_center_org_star_icon"
                                    app:starImageHeight="@dimen/sky_dp_size_13"
                                    app:starImagePadding="@dimen/sky_dp_size_3"
                                    app:starImageWidth="@dimen/sky_dp_size_13" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="速度："
                                    android:textSize="@dimen/sky_font_size_10"
                                    android:textColor="@color/sky_color_808080"
                                    android:layout_marginLeft="@dimen/sky_dp_size_14"/>

                                <com.sky.app.library.component.RatingBar
                                    android:id="@+id/speed_rating_bar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    app:clickable="false"
                                    app:halfstart="false"
                                    app:starCount="5"
                                    app:starEmpty="@mipmap/app_collect_grey_icon"
                                    app:starFill="@mipmap/app_center_org_star_icon"
                                    app:starImageHeight="@dimen/sky_dp_size_13"
                                    app:starImagePadding="@dimen/sky_dp_size_3"
                                    app:starImageWidth="@dimen/sky_dp_size_13" />

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/app_skip_all_comment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="查看全部评价"
                            android:textSize="@dimen/sky_font_size_15"
                            android:textColor="@color/main_colorPrimary"
                            android:paddingLeft="@dimen/sky_dp_size_8"
                            android:paddingRight="@dimen/sky_dp_size_8"
                            android:paddingTop="@dimen/sky_dp_size_2"
                            android:paddingBottom="@dimen/sky_dp_size_2"
                            android:background="@drawable/textview"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/sky_dp_size_18"/>

                    </LinearLayout>

                    <View android:layout_height="@dimen/sky_dp_size_12"
                        android:layout_width="match_parent"
                        android:background="@color/sky_color_f2f2f2"/>

                    <RelativeLayout
                        android:paddingLeft="@dimen/sky_dp_size_17"
                        android:paddingRight="@dimen/sky_dp_size_17"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/sky_dp_size_80">

                        <LinearLayout
                            android:id="@+id/app_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/sky_dp_size_1"
                            android:background="@drawable/app_grey_shape"
                            android:layout_centerVertical="true">

                            <ImageView android:layout_width="@dimen/sky_dp_size_56"
                                android:id="@+id/product_detail_seller_pic"
                                android:src="@mipmap/ic_launcher"
                                android:scaleType="centerCrop"
                                android:layout_height="@dimen/sky_dp_size_56" />

                        </LinearLayout>

                        <TextView android:layout_width="wrap_content"
                            android:text="伯母唐"
                            android:id="@+id/product_detail_seller_name"
                            android:gravity="center"
                            android:layout_height="wrap_content"
                            android:maxEms="10"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textSize="@dimen/sky_font_size_18"
                            android:textColor="@color/sky_color_333333"
                            android:layout_marginLeft="@dimen/sky_dp_size_9"
                            android:layout_toRightOf="@id/app_image"
                            android:layout_alignTop="@id/app_image"
                            android:layout_marginTop="@dimen/sky_dp_size_3"/>

                        <TextView android:layout_width="wrap_content"
                            android:text="收藏店铺"
                            android:paddingLeft="@dimen/sky_dp_size_8"
                            android:paddingRight="@dimen/sky_dp_size_8"
                            android:paddingTop="@dimen/sky_dp_size_4"
                            android:paddingBottom="@dimen/sky_dp_size_4"
                            android:id="@+id/product_detail_seller_shoucang"
                            android:gravity="center"
                            android:textSize="@dimen/sky_font_size_10"
                            android:textColor="@color/sky_color_black"
                            android:background="@drawable/textview_grey"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/sky_dp_size_9"
                            android:layout_toRightOf="@id/app_image"
                            android:layout_alignBottom="@id/app_image"
                            android:layout_marginBottom="@dimen/sky_dp_size_3"/>

                        <TextView
                            android:id="@+id/app_go_shop"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:text="进店逛逛"
                            android:paddingLeft="@dimen/sky_dp_size_10"
                            android:paddingRight="@dimen/sky_dp_size_10"
                            android:paddingTop="@dimen/sky_dp_size_6"
                            android:paddingBottom="@dimen/sky_dp_size_6"
                            android:background="@drawable/textview"
                            android:textSize="@dimen/sky_font_size_15"
                            android:textColor="#00a5ea"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"/>

                    </RelativeLayout>

                    <View android:layout_height="@dimen/sky_dp_size_12"
                        android:layout_width="match_parent"
                        android:background="@color/sky_color_f2f2f2"/>

                    <TextView android:layout_width="wrap_content"
                        android:text="商品详情"
                        android:paddingTop="@dimen/sky_dp_size_10"
                        android:paddingBottom="@dimen/sky_dp_size_10"
                        android:paddingLeft="@dimen/sky_dp_size_17"
                        android:paddingRight="@dimen/sky_dp_size_17"
                        android:layout_marginTop="@dimen/sky_dp_size_5"
                        android:textSize="@dimen/sky_dp_size_16"
                        android:textColor="@color/sky_color_333333"
                        android:layout_height="wrap_content"/>
                    
                    <WebView
                        android:id="@+id/app_product_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </ScrollView>

            <!--分享的按钮-->
            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="5dp"
                android:fillViewport="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView android:layout_width="30dp"
                    android:id="@+id/product_detail_back"
                    android:layout_height="30dp"
                    android:src="@mipmap/app_shop_back_icon" />

                <LinearLayout android:layout_width="0dp"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <ImageView android:layout_width="wrap_content"
                        android:layout_gravity="right"
                        android:layout_height="30dp"
                        android:id="@+id/product_detail_shopcar"
                        android:src="@mipmap/app_shop_car_icon" />

                        <ImageView android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="right"
                            android:id="@+id/product_detail_share"
                            android:src="@mipmap/app_shop_share_icon" />

                </LinearLayout>

            </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View style="@style/grey_0_5_horizontal_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sky_dp_size_56"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="135dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:id="@+id/product_detail_kefu"
                    android:layout_width="@dimen/sky_dp_size_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/sky_dp_size_22"
                        android:layout_height="@dimen/sky_dp_size_22"
                        android:src="@mipmap/app_shop_service_icon"
                        android:layout_marginTop="@dimen/sky_dp_size_8"
                        android:layout_centerHorizontal="true"/>

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="客服"
                        android:textSize="@dimen/sky_font_size_15"
                        android:textColor="@color/sky_color_5e5e5e"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/sky_dp_size_5"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/app_shop"
                    android:layout_width="@dimen/sky_dp_size_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="@dimen/sky_dp_size_22"
                        android:layout_height="@dimen/sky_dp_size_22"
                        android:src="@mipmap/app_shop_icon"
                        android:layout_marginTop="@dimen/sky_dp_size_8"
                        android:layout_centerHorizontal="true"/>

                    <TextView android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="店铺"
                        android:textSize="@dimen/sky_font_size_15"
                        android:textColor="@color/sky_color_5e5e5e"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/sky_dp_size_5"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/sky_dp_size_0"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/app_star"
                        android:layout_width="@dimen/sky_dp_size_22"
                        android:layout_height="@dimen/sky_dp_size_22"
                        android:src="@mipmap/app_product_detail_star_icon"
                        android:layout_marginTop="@dimen/sky_dp_size_8"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/product_detail_collect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="收藏"
                        android:textSize="@dimen/sky_font_size_15"
                        android:textColor="@color/sky_color_5e5e5e"
                        android:gravity="center"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/sky_dp_size_5"
                        android:layout_centerHorizontal="true"/>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/sky_dp_size_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView android:layout_width="@dimen/sky_dp_size_0"
                    android:id="@+id/product_detail_joincar"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="加入购物车"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:background="#57bff0" />

                <TextView android:layout_width="@dimen/sky_dp_size_0"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="立即购买"
                    android:textSize="18sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:background="#1d77f0"
                    android:id="@+id/product_detail_buynow" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>