<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="2dp">

    <com.sky.app.library.component.CustomImageView
    android:id="@+id/app_home_type_img"
    android:layout_width="@dimen/sky_dp_size_52"
    android:layout_height="@dimen/sky_dp_size_52"
    android:src="@mipmap/category_default_icon"
    app:radius="@dimen/sky_dp_size_3" />


    <TextView
        android:id="@+id/app_home_type_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/sky_dp_size_1"
        android:textColor="@color/sky_color_333333"
        android:textSize="@dimen/sky_dp_size_10" />
</LinearLayout>