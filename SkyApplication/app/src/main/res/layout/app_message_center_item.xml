<?xml version="1.0" encoding="utf-8"?>
<com.sky.app.ui.custom.SwipeMenuView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/can_click_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/sky_dp_size_17"
        android:paddingRight="@dimen/sky_dp_size_17">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="@dimen/sky_dp_size_52"
            android:layout_height="@dimen/sky_dp_size_52"
            android:src="@mipmap/app_person_icon"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/app_message_title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/app_icon"
            android:layout_alignParentTop="true"
            android:maxEms="15"
            android:textSize="@dimen/sky_font_size_15"
            android:textColor="@color/sky_color_333333"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/sky_dp_size_22"
            android:layout_marginLeft="@dimen/sky_dp_size_14"/>
        
        <TextView
            android:id="@+id/app_message_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/app_icon"
            android:layout_below="@id/app_message_title"
            android:textSize="@dimen/sky_font_size_14"
            android:textColor="@color/sky_color_808080"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/sky_dp_size_14"
            android:layout_marginTop="@dimen/sky_dp_size_5"
            android:layout_marginBottom="@dimen/sky_dp_size_22"/>

        <TextView
            android:id="@+id/app_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-11-09 12:23:23"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/sky_dp_size_25"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/app_delete"
        android:layout_width="@dimen/sky_dp_size_90"
        android:layout_height="match_parent"
        style="@style/can_click_layout"
        android:background="@color/main_colorPrimary">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/app_message_del_icon"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</com.sky.app.ui.custom.SwipeMenuView>