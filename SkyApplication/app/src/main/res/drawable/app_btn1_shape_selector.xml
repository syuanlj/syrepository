<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 点击背景 -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_colorPrimary"/>
            <corners android:radius="@dimen/sky_dp_size_15"></corners>
        </shape>
    </item>

    <!-- 默认背景 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/sky_color_daf4ff"/>
            <corners android:radius="@dimen/sky_dp_size_15"></corners>
        </shape>
    </item>

</selector>