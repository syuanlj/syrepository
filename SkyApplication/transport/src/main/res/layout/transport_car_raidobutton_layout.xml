<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transport_car_1_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/transport_car_1_icon"
        android:layout_width="@dimen/sky_dp_size_39"
        android:layout_height="@dimen/sky_dp_size_24"
        android:layout_marginTop="@dimen/sky_dp_size_17"/>

    <TextView
        android:id="@+id/transport_car_1_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/homepage_car_font_style"
        android:layout_marginTop="@dimen/sky_dp_size_11"
        android:textColor="@drawable/transport_title_menu_text_selecter"
        android:layout_below="@id/transport_car_1_icon"
        android:layout_alignLeft="@id/transport_car_1_icon"
        android:layout_alignRight="@id/transport_car_1_icon"/>

</RelativeLayout>