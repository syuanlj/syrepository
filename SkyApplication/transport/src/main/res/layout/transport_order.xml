<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/transport_normal_header" />

    <android.support.design.widget.TabLayout
        android:id="@+id/transport_order_title_tl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sky_dp_size_48"
        style="@style/CustomTabLayout"/>

    <View style="@style/grey_horizontal_line"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/transport_order_list_vp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sky_dp_size_0"
        android:layout_weight="1"
        android:background="@android:color/white" />

</LinearLayout>