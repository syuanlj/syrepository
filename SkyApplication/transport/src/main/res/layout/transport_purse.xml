<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/sky_color_white">

    <include layout="@layout/transport_normal_header" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/sky_dp_size_17"
        android:paddingRight="@dimen/sky_dp_size_17"
        android:paddingTop="@dimen/sky_dp_size_33"
        android:paddingBottom="@dimen/sky_dp_size_33">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额"
            android:textColor="@color/sky_color_333333"
            android:textSize="@dimen/sky_font_size_17"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />
        
        <TextView
            android:id="@+id/transport_remain_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00元"
            android:textSize="@dimen/sky_font_size_17"
            android:textColor="@color/sky_color_adadad"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
</LinearLayout>