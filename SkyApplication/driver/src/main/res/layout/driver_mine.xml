<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/sky_color_f2f2f2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sky_dp_size_160"
        android:background="@color/driver_colorPrimary">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal">

            <FrameLayout
                android:id="@+id/driver_person_fl"
                android:layout_width="@dimen/sky_dp_size_55"
                android:layout_height="@dimen/sky_dp_size_55">

                <com.sky.app.library.component.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@mipmap/driver_center_icon"/>

                <com.sky.app.library.component.CircleImageView
                    android:id="@+id/driver_person_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </FrameLayout>

            <TextView
                android:id="@+id/driver_person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/sky_color_white"
                android:textSize="@dimen/sky_font_size_15"
                android:layout_below="@id/driver_person_fl"
                android:layout_marginTop="@dimen/sky_dp_size_7"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sky_color_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/driver_center_purse_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sky_dp_size_50"
            android:gravity="left|center_vertical"
            android:drawableLeft="@mipmap/driver_center_purse"
            android:drawablePadding="@dimen/sky_dp_size_6"
            android:text="我的钱包"
            android:textSize="@dimen/sky_font_size_17"
            android:textColor="@color/sky_color_333333"
            android:paddingLeft="@dimen/sky_dp_size_22"/>

        <View style="@style/grey_0_5_horizontal_line"/>

        <TextView
            android:id="@+id/driver_center_account_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sky_dp_size_50"
            android:gravity="left|center_vertical"
            android:drawableLeft="@mipmap/driver_center_accont"
            android:drawablePadding="@dimen/sky_dp_size_9"
            android:text="我的账户"
            android:paddingLeft="@dimen/sky_dp_size_22"
            android:textSize="@dimen/sky_font_size_17"
            android:textColor="@color/sky_color_333333"/>

        <View style="@style/grey_0_5_horizontal_line"/>

        <TextView
            android:id="@+id/driver_center_setting_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sky_dp_size_50"
            android:gravity="left|center_vertical"
            android:drawableLeft="@mipmap/driver_center_settings"
            android:drawablePadding="@dimen/sky_dp_size_8"
            android:text="设置"
            android:paddingLeft="@dimen/sky_dp_size_22"
            android:textSize="@dimen/sky_font_size_17"
            android:textColor="@color/sky_color_333333"/>
        
    </LinearLayout>

</LinearLayout>