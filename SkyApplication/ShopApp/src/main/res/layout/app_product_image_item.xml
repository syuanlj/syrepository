<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sky_color_white">

    <ImageView
        android:id="@+id/add_icon"
        android:layout_width="@dimen/sky_dp_size_56"
        android:layout_height="@dimen/sky_dp_size_56"
        android:src="@mipmap/app_default_icon"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/del_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_icon"
        android:text="删除"
        android:textSize="@dimen/sky_font_size_12"
        android:textColor="@color/sky_color_79cf89"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/sky_dp_size_5"
        android:drawableLeft="@mipmap/app_product_del_icon"
        android:drawablePadding="@dimen/sky_dp_size_2"/>

</RelativeLayout>