<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:paddingLeft="10dp"
              android:paddingRight="10dp"
    android:orientation="horizontal">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginTop="10dp"
                  android:paddingLeft="3dp"
                  android:paddingRight="3dp"

    >

        <LinearLayout android:layout_width="wrap_content"
                      android:id="@+id/one_ll"
                      android:orientation="vertical"
                      android:gravity="center_horizontal"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="63dp"
                       android:layout_height="62dp"
                       tools:src="@mipmap/btn_1"
                       android:id="@+id/pic_1"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:id="@+id/category_name1"
                      tools:text="家具"
            />
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_marginLeft="28dp"
                      android:orientation="vertical"
                      android:id="@+id/two_ll"
                      android:gravity="center_horizontal"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="62dp"
                       tools:src="@mipmap/btn_2"
                       android:id="@+id/pic_2"
                       android:layout_height="62dp"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      android:id="@+id/category_name2"
                      tools:text="家具"
            />
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_marginLeft="28dp"
                      android:orientation="vertical"
                      android:id="@+id/three_ll"

                      android:gravity="center_horizontal"
                      android:layout_height="wrap_content">
            <ImageView android:layout_width="62dp"
                       tools:src="@mipmap/btn_3"
                       android:id="@+id/pic_3"
                       android:layout_height="62dp"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      tools:text="家具"
                      android:id="@+id/category_name3"
            />

        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:layout_marginLeft="28dp"
                      android:id="@+id/four_ll"
                      android:orientation="vertical"
                      android:gravity="center_horizontal"
                      android:layout_height="wrap_content">

            <ImageView android:layout_width="62dp"
                       tools:src="@mipmap/btn_4"
                       android:id="@+id/pic_4"
                       android:layout_height="62dp"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="10dp"
                      tools:text="家具"
                      android:id="@+id/category_name4"
            />
        </LinearLayout>

        <LinearLayout android:layout_width="wrap_content"
                      android:visibility="gone"
                      android:id="@+id/back_ll"
                      android:layout_gravity="center_vertical"
                      android:orientation="vertical"
                      android:gravity="center_horizontal"
                      android:layout_marginLeft="20dp"
                      android:layout_height="wrap_content">

            <ImageView android:layout_width="62dp"
                       android:src="@mipmap/back"
                       android:id="@+id/back"
                       android:layout_height="62dp"/>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>

