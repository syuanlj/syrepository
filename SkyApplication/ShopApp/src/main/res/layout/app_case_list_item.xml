<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/sky_color_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/app_image"
                android:layout_width="@dimen/sky_dp_size_150"
                android:layout_height="@dimen/sky_dp_size_132"
                android:scaleType="centerCrop"/>

            <TextView
                android:id="@+id/app_txt"
                android:layout_width="@dimen/sky_dp_size_150"
                android:layout_height="@dimen/sky_dp_size_33"
                android:layout_centerHorizontal="true"
                android:text="搭嘎说大哥"
                android:textColor="@color/sky_color_white"
                android:textSize="@dimen/sky_font_size_14"
                android:gravity="center"
                android:background="@color/sky_color_80000000"
                android:layout_alignBottom="@id/app_image"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/app_image"
            android:layout_marginTop="@dimen/sky_dp_size_6"
            android:gravity="center">

            <TextView
                android:id="@+id/del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:textSize="@dimen/sky_font_size_14"
                android:textColor="@color/sky_color_47c261"
                android:drawableLeft="@mipmap/app_product_del_icon"
                android:drawablePadding="@dimen/sky_dp_size_2"/>

            <TextView
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:textSize="@dimen/sky_font_size_14"
                android:textColor="@color/sky_color_ecac00"
                android:drawableLeft="@mipmap/app_case_edit_icon"
                android:drawablePadding="@dimen/sky_dp_size_2"
                android:layout_marginLeft="@dimen/sky_dp_size_20"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>