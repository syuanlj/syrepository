<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/sky_color_white">

    <include layout="@layout/app_normal_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sky_dp_size_137">
            
            <ImageView
                android:layout_width="@dimen/sky_dp_size_70"
                android:layout_height="@dimen/sky_dp_size_70"
                android:src="@mipmap/app_logo_icon"
                android:layout_centerInParent="true"/>
            
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/sky_dp_size_0"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/sky_dp_size_16"
            android:paddingLeft="@dimen/sky_dp_size_20"
            android:paddingRight="@dimen/sky_dp_size_20">

            <LinearLayout
                android:id="@+id/sky_account_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sky_dp_size_40"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/sky_dp_size_24"
                    android:layout_height="@dimen/sky_dp_size_24"
                    android:src="@mipmap/app_username_icon"
                    android:layout_gravity="center_vertical"/>

                <EditText
                    android:id="@+id/driver_login_name_et"
                    android:layout_width="@dimen/sky_dp_size_0"
                    android:layout_height="@dimen/sky_dp_size_30"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/sky_dp_size_11"
                    android:layout_gravity="center_vertical"
                    android:gravity="bottom"
                    android:hint="用户名/邮箱/手机号"
                    android:background="@null"
                    android:inputType="text"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:textColor="@color/sky_color_666666"
                    android:textColorHint="@color/sky_color_cccccc"
                    android:textSize="@dimen/sky_font_size_14"
                    android:selectAllOnFocus="true"/>

            </LinearLayout>

            <View style="@style/login_grey_horizontal_line" />

            <LinearLayout
                android:id="@+id/sky_pwd_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sky_dp_size_40"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/sky_dp_size_17">

                <ImageView
                    android:layout_width="@dimen/sky_dp_size_24"
                    android:layout_height="@dimen/sky_dp_size_24"
                    android:src="@mipmap/app_pwd_icon"
                    android:layout_gravity="center_vertical"/>

                <EditText
                    android:id="@+id/driver_login_pwd_et"
                    android:layout_width="@dimen/sky_dp_size_0"
                    android:layout_height="@dimen/sky_dp_size_30"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/sky_dp_size_11"
                    android:layout_gravity="center_vertical"
                    android:gravity="bottom"
                    android:hint="密码"
                    android:maxLines="1"
                    android:maxLength="20"
                    android:inputType="textPassword"
                    android:background="@null"
                    android:textColor="@color/sky_color_666666"
                    android:textColorHint="@color/sky_color_cccccc"
                    android:textSize="@dimen/sky_font_size_14" />

            </LinearLayout>

            <View style="@style/login_grey_horizontal_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sky_dp_size_24">

                <TextView
                    android:id="@+id/driver_no_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sky_color_666666"
                    android:text="注册账号"
                    android:textSize="@dimen/sky_font_size_15"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/driver_forget_pwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/sky_color_666666"
                    android:text="忘记密码?"
                    android:textSize="@dimen/sky_font_size_15"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/driver_login_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sky_dp_size_45"
                android:text="登录"
                android:textSize="@dimen/sky_font_size_17"
                android:textColor="@color/sky_color_white"
                android:background="@color/sky_color_00a5ea"
                android:layout_marginTop="@dimen/sky_dp_size_27"
                android:gravity="center"/>
        </LinearLayout>

