<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_seller_second_category"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/app_normal_header"/>

    <ScrollView android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.sky.shop.custom.AutoHeightViewPager
                    android:id="@+id/second_category_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <LinearLayout android:layout_width="match_parent"
                    android:gravity="center"
                    android:id="@+id/dot_container"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_height="20dp">

                </LinearLayout>

            </LinearLayout>

            <View android:layout_width="match_parent"
                android:layout_height="@dimen/sky_dp_size_12"
                android:background="@color/sky_color_f2f2f2" />

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择所属区域"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.sky.shop.custom.AutoHeightGridView
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:id="@+id/seller_second_category_gridview_area"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:numColumns="3"
                    android:verticalSpacing="10dp"
                    android:horizontalSpacing="10dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <View android:layout_width="match_parent"
                android:layout_height="@dimen/sky_dp_size_12"
                android:background="@color/sky_color_f2f2f2" />

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择所属装饰城"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.sky.shop.custom.AutoHeightGridView
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:id="@+id/seller_second_category_gridview_decoratio"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:numColumns="3"
                    android:verticalSpacing="10dp"
                    android:horizontalSpacing="10dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <View android:layout_width="match_parent"
                android:layout_height="@dimen/sky_dp_size_12"
                android:background="@color/sky_color_f2f2f2" />

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选择厂家类型"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.sky.shop.custom.AutoHeightGridView
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10dp"
                    android:id="@+id/company_type"
                    android:numColumns="3"
                    android:horizontalSpacing="10dp"
                    android:verticalSpacing="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"/>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal">

        <LinearLayout
            android:id="@+id/app_keys_word"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
        </LinearLayout>

    </HorizontalScrollView>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal">

        <LinearLayout android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <RelativeLayout android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/area_reala"
                android:visibility="gone"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    tools:text="下一步"
                    android:id="@+id/area_tv"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#666666"
                    android:textSize="18sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/textview_grey"
                    />

                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_alignRight="@id/area_tv"
                    android:src="@mipmap/delete_xx"/>
            </RelativeLayout>
            <RelativeLayout android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:id="@+id/decoration_reala"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    tools:text="下一步"
                    android:id="@+id/decoration_tv"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#666666"
                    android:textSize="18sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/textview_grey"
                    />

                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_alignRight="@id/decoration_tv"
                    android:src="@mipmap/delete_xx"/>
            </RelativeLayout>

            <RelativeLayout android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:id="@+id/company_type_rl"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    tools:text="下一步"
                    android:id="@+id/company_type_tv"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="#666666"
                    android:textSize="18sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/textview_grey"
                    />

                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_alignRight="@id/company_type_tv"
                    android:src="@mipmap/delete_xx"/>
            </RelativeLayout>
        </LinearLayout>

    </HorizontalScrollView>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="下一步"
              android:layout_gravity="center"
              android:id="@+id/seller_second_category_next"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp"
              android:paddingLeft="50dp"
              android:paddingRight="50dp"
              android:textColor="#ffffff"
              android:textSize="18sp"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:background="#00a5ea"
    />

</LinearLayout>
