<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sky_color_white"
    android:orientation="vertical">

    <include layout="@layout/app_normal_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/sky_dp_size_0"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/sky_dp_size_50"
                android:gravity="start|center_vertical"
                android:paddingLeft="@dimen/sky_dp_size_17"
                android:paddingRight="@dimen/sky_dp_size_17"
                android:text="商品图片"
                android:textColor="@color/sky_color_black"
                android:textSize="@dimen/sky_font_size_18" />

            <View style="@style/grey_0_5_horizontal_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/sky_dp_size_100">

                <com.sky.shop.custom.AutoHeightGridView
                    android:id="@+id/gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@color/sky_color_white"
                    android:fadingEdge="none"
                    android:gravity="center"
                    android:horizontalSpacing="5dp"
                    android:listSelector="#00000000"
                    android:numColumns="5"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:scrollbars="none" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/sky_dp_size_12"
                android:background="@color/sky_color_f2f2f2" />

            <EditText
                android:id="@+id/product_price_old"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sky_dp_size_17"
                android:layout_marginRight="@dimen/sky_dp_size_17"
                android:layout_marginTop="@dimen/sky_dp_size_17"
                android:background="@drawable/transport_homepage_grey_shape"
                android:gravity="start|center_vertical"
                android:hint="请输入商品原价"
                android:inputType="numberDecimal"
                android:paddingBottom="@dimen/sky_dp_size_8"
                android:paddingLeft="@dimen/sky_dp_size_5"
                android:paddingTop="@dimen/sky_dp_size_8"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="@color/sky_color_black"
                android:textSize="@dimen/sky_font_size_16" />

            <EditText
                android:id="@+id/product_price_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sky_dp_size_17"
                android:layout_marginRight="@dimen/sky_dp_size_17"
                android:layout_marginTop="@dimen/sky_dp_size_17"
                android:background="@drawable/transport_homepage_grey_shape"
                android:gravity="start|center_vertical"
                android:hint="请输入商品优惠价"
                android:inputType="numberDecimal"
                android:paddingBottom="@dimen/sky_dp_size_8"
                android:paddingLeft="@dimen/sky_dp_size_5"
                android:paddingTop="@dimen/sky_dp_size_8"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="@color/sky_color_black"
                android:textSize="@dimen/sky_font_size_16" />

            <EditText
                android:id="@+id/app_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sky_dp_size_17"
                android:layout_marginRight="@dimen/sky_dp_size_17"
                android:layout_marginTop="@dimen/sky_dp_size_17"
                android:background="@drawable/transport_homepage_grey_shape"
                android:gravity="start|center_vertical"
                android:hint="请输入商品名称"
                android:inputType="text"
                android:paddingBottom="@dimen/sky_dp_size_8"
                android:paddingLeft="@dimen/sky_dp_size_5"
                android:paddingTop="@dimen/sky_dp_size_8"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="@color/sky_color_black"
                android:textSize="@dimen/sky_font_size_16" />

            <EditText
                android:id="@+id/app_store_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sky_dp_size_17"
                android:layout_marginLeft="@dimen/sky_dp_size_17"
                android:layout_marginRight="@dimen/sky_dp_size_17"
                android:layout_marginTop="@dimen/sky_dp_size_17"
                android:background="@drawable/transport_homepage_grey_shape"
                android:gravity="start"
                android:hint="请输入店铺活动"
                android:paddingBottom="@dimen/sky_dp_size_8"
                android:paddingLeft="@dimen/sky_dp_size_5"
                android:paddingRight="@dimen/sky_dp_size_5"
                android:paddingTop="@dimen/sky_dp_size_8"
                android:selectAllOnFocus="true"
                android:textColor="@color/sky_color_black"
                android:textSize="@dimen/sky_font_size_16" />

            <Switch
                android:id="@+id/other_flag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sky_dp_size_17"
                android:layout_marginLeft="@dimen/sky_dp_size_17"
                android:drawablePadding="@dimen/sky_dp_size_10"
                android:switchPadding="@dimen/sky_dp_size_10"
                android:text="是否推荐"
                android:textColor="@color/sky_color_black"
                android:textSize="@dimen/sky_font_size_16" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/sky_dp_size_12"
                android:background="@color/sky_color_f2f2f2" />

            <RelativeLayout
                android:id="@+id/choose_product_category"
                android:layout_width="match_parent"
                android:layout_height="@dimen/sky_dp_size_45"
                android:paddingLeft="@dimen/sky_dp_size_17"
                android:paddingRight="@dimen/sky_dp_size_17">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="选择商品分类"
                    android:textColor="#333333"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/app_right_arrow_icon" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/sky_dp_size_12"
                android:background="@color/sky_color_f2f2f2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/sky_dp_size_5"
                android:layout_marginTop="@dimen/sky_dp_size_20"
                android:paddingLeft="@dimen/sky_dp_size_17"
                android:paddingRight="@dimen/sky_dp_size_17">

                <Button
                    android:id="@+id/add_price_attr"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/sky_dp_size_30"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/transport_homepage_grey_shape"
                    android:paddingLeft="@dimen/sky_dp_size_6"
                    android:paddingRight="@dimen/sky_dp_size_6"
                    android:text="增加价格属性" />

            </RelativeLayout>

            <TableLayout
                android:id="@+id/attr_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/sky_dp_size_17"
                android:paddingRight="@dimen/sky_dp_size_17"
                android:stretchColumns="0">

            </TableLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/sky_dp_size_12"
                android:layout_marginTop="@dimen/sky_dp_size_17"
                android:background="@color/sky_color_f2f2f2" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/sky_dp_size_50"
                android:gravity="start|center_vertical"
                android:paddingLeft="@dimen/sky_dp_size_17"
                android:paddingRight="@dimen/sky_dp_size_17"
                android:text="商品详情"
                android:textColor="@color/sky_color_black"
                android:textSize="@dimen/sky_font_size_18" />

            <View style="@style/grey_0_5_horizontal_line" />

            <EditText
                android:id="@+id/app_product_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="start"
                android:hint="请输入商品描述"
                android:inputType="text"
                android:padding="@dimen/sky_dp_size_17"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="@color/sky_color_black"
                android:textSize="@dimen/sky_font_size_16" />


        </LinearLayout>

    </ScrollView>
    <TextView
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sky_dp_size_56"
        android:layout_weight="0."
        android:background="@color/main_colorPrimary"
        android:gravity="center"
        android:text="确 定"
        android:textColor="@color/sky_color_white"
        android:textSize="@dimen/sky_font_size_16" />

</LinearLayout>