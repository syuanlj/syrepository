<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 点击背景 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/sky_color_e4e4e4"/>
            <corners android:bottomLeftRadius="@dimen/sky_dp_size_5"
                android:bottomRightRadius="@dimen/sky_dp_size_5" />
        </shape>
    </item>

    <!-- 默认背景 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/sky_color_white" />
            <corners android:bottomLeftRadius="@dimen/sky_dp_size_5"
                android:bottomRightRadius="@dimen/sky_dp_size_5" />
        </shape>
    </item>

</selector>