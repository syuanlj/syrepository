<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sky_color_08000000"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/sky_dp_size_10" >

    <ProgressBar
        android:id="@+id/driver_progress_bar"
        android:layout_width="@dimen/sky_dp_size_25"
        android:layout_height="@dimen/sky_dp_size_25" />

    <TextView
        android:id="@+id/driver_progress_bar_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/sky_dp_size_10"
        android:textSize="@dimen/sky_font_size_16"
        android:textColor="@color/main_colorPrimary"
        android:text="@string/loading" />

</LinearLayout>