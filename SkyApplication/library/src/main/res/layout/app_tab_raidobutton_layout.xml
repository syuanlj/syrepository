<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_radio_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sky_dp_size_50"
    android:gravity="center">

    <ImageView
        android:id="@+id/custom_radiobutton"
        android:layout_width="@dimen/sky_dp_size_24"
        android:layout_height="@dimen/sky_dp_size_24"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/sky_dp_size_4"/>

    <TextView
        android:id="@+id/rb_msg_txt"
        android:layout_width="@dimen/sky_dp_size_9"
        android:layout_height="@dimen/sky_dp_size_9"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="@dimen/sky_dp_size_2"
        android:layout_toRightOf="@id/custom_radiobutton"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:gravity="center"
        android:textColor="@color/sky_color_white"
        android:textSize="@dimen/sky_font_size_12"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/rb_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/custom_radiobutton"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingTop="@dimen/sky_dp_size_4"
        android:textColor="@drawable/title_menu_text_selecter"
        android:textSize="@dimen/sky_font_size_11" />

</RelativeLayout>